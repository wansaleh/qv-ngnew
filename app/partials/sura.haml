.overlay

.ayas-wrapper

  .page-header.fixed#topnav
    .container
      .row
        .span12
          %h1
            %a(qv-href="/")
              {{suraInfo.tname}}
              %small {{suraInfo.ename}}
              %small.arab {{suraInfo.name}}
            / %small.info
            /   {{suraInfo.ayas}} ayas,
            /   {{suraInfo.type}}
            /   / {{ayas.collection.length}} loaded

          .links
            .non-btn-group
              %span.muted {{suraInfo.type}}
              %span.muted {{suraInfo.ayas}} ayas ({{ayas.collection.length}} loaded)

              %a(qv-href="{{suraInfo.prev_link}}" ng-show="suraInfo.prev_link" qv-title="{{suraInfo.prev_title}}" ui-jq="tooltip") Previous
              %span.muted(ng-hide="suraInfo.prev_link") Previous

              %a(qv-href="{{suraInfo.next_link}}" ng-show="suraInfo.next_link" qv-title="{{suraInfo.next_title}}" ui-jq="tooltip") Next
              %span.muted(ng-hide="suraInfo.next_link") Next

            .btn-group
              / %topbtn(ng-click="showSuras()")
              /   %i.icon-list
              %abtn(type="primary small" qv-href="/")
                %i.icon-home
                Home

  .sura-list

  .ayas-container
    / (ng-hide="suraInfo.id == 1")
    .bismillah(ng-click="hideSuras()")
      .container
        .row
          .span12
            %h2.center
              %img(src="/assets/img/ayas/bismillah-center.png" alt="")
              / %span.arab بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ

            %h2.translation.center
              Bismillahirrahmanirrahim<br>
              %small In the name of Allah, the Entirely Merciful, the Especially Merciful.

    .ayas
      .aya-wrapper(ng-repeat="aya in ayas.result" ng-hide="aya.sura_id == 1 && aya.aya == 1")
        .container
          .row
            .span12
              .info
                %h4.juz(ng-show="aya.juz") Juz &sdot; <b>{{aya.juz}}</b>
                %h5.hizb(ng-show="aya.hizb") Hizb Quarter &sdot; <b>{{aya.hizb}}</b>
                %h5.ruku(ng-show="aya.ruku") Ruku' &sdot; <b>{{aya.ruku}}</b>
                %h5.manzil(ng-show="aya.manzil") Manzil &sdot; <b>{{aya.manzil}}</b>

              %img(ng-src="{{aya | ayaimg}}" alt="")
              / %p.text.arab
              /   / {{aya | ayatext}}
              /   / %strong.number {{aya.aya | arab}}

              %p.translation
                %strong.number <span class="number-sura">{{aya.sura_id}}</span> : <span class="number-aya">{{aya.aya}}</span>
                {{aya.translation}}

          .row
            .span12(ng-switch="aya.sajda")

              %div(ng-switch-when="1")
                .alert.alert-info.sajda.recommended
                  %i.icon-info-sign.icon-large
                  It is
                  %strong recommended to sujud (prostrate)
                  after reading this aya.

              %div(ng-switch-when="2")
                .alert.alert-error.sajda.obligatory
                  %i.icon-info-sign.icon-large
                  It is
                  %strong obligatory to sujud (prostrate)
                  after reading this aya.